generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model accounts {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  first_name String
  last_name  String
  password   String
}

model logs {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  action     String
  datetime   DateTime @db.Date
  object     String
}

model product_categories {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  category_name String
  description   String
}

model products {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  available_stock  BigInt
  color            String
  description      String
  image            String
  price            BigInt
  product_category String
  product_name     String
  size             String
  total_stock      BigInt
}

model rental_details {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  amount       BigInt
  color        String
  id_rental    String
  image        String
  note         String
  price        BigInt
  product_name String
  size         String
}

model rental_statuses {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  id_status BigInt
  status    String
}

model rentals {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  datetime      DateTime @db.Date
  deadline      String
  id_status     BigInt
  nama_pemesan  String
  nomer_telepon BigInt
  note          String
  total_price   BigInt
}
